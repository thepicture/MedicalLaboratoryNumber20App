<Page x:Class="MedicalLaboratoryNumber20App.Views.Pages.AdminPages.AdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:MedicalLaboratoryNumber20App.Views.Pages.AdminPages"
      mc:Ignorable="d"
      d:DesignHeight="450"
      d:DesignWidth="800"
      Title="Страница админа">
    <Grid>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <Button Content="Cформировать отчеты"
                    Width="auto"
                    ToolTip="Открыть страницу формирования отчётов"></Button>
            <Button Content="История входа"
                    Width="auto"
                    ToolTip="Открыть историю входа пользователей"
                    Click="NavigateToLoginHistories"></Button>
            <Button Content="Данные о расходных материалах"
                    Width="auto"
                    ToolTip="Открыть страницу данных о расходных материалах"></Button>
        </StackPanel>
    </Grid>
</Page>
