<Page x:Class="MedicalLaboratoryNumber20App.Views.Pages.ReportPages.WhatReportUserNeedPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:MedicalLaboratoryNumber20App.Views.Pages.ReportPages"
      mc:Ignorable="d"
      d:DesignHeight="450"
      d:DesignWidth="800"
      Title="Страница выбора типа отчёта">
    <Grid>
        <TextBlock Text="Какой тип отчёта нужен?"
                   Style="{StaticResource HeaderBlock}"
                   VerticalAlignment="Top"
                   Width="auto"></TextBlock>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <Button Content="Контроль качества"
                    Width="auto"
                    ToolTip="Открыть страницу для сформирования отчёта по контролю качества"
                    Click="GoToQualityControlReportPage"></Button>
            <Button Content="Отчёт по оказанным услугам"
                    Width="auto"
                    ToolTip="Открыть страницу формирования отчётов по оказанным услугам"
                    Click="GoToAppliedServicesReportPage"></Button>
        </StackPanel>
    </Grid>
</Page>
